// prettier-ignore
{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "#generated": ["./generated/index"],
      "#ui-kit": ["./src/ui-kit/index"],
      "#components": ["./src/components/index"],
      "#screens": ["./src/screens/index"],
      "#modals": ["./src/modals/index"],
      "#navigation": ["./src/navigation/index"],
      "#api": ["./src/core/api/index"],
      "#hooks": ["./src/core/hooks/index"],
      "#utils": ["./src/core/utils/index"],
      "#services": ["./src/core/services/index"],
      "#styles": ["./src/styles/index"],
      "#assets": ["./src/assets/index"],
      "#store": ["./src/store/index"],
      "#config": ["./src/config/index"],
      "#localization": ["./src/localization/index"],
    
      "#generated/*": ["./generated/*"],
      "#ui-kit/*": ["./src/ui-kit/*"],
      "#components/*": ["./src/components/*"],
      "#screens/*": ["./src/screens/*"],
      "#modals/*": ["./src/modals/*"],
      "#navigation/*": ["./src/navigation/*"],
      "#api/*": ["./src/core/api/*"],
      "#hooks/*": ["./src/core/hooks/*"],
      "#utils/*": ["./src/core/utils/*"],
      "#services/*": ["./src/core/services/*"],
      "#styles/*": ["./src/styles/*"],
      "#assets/*": ["./src/assets/*"],
      "#store/*": ["./src/store/*"],
      "#config/*": ["./src/config/*"],
      "#localization/*": ["./src/localization/*"],
    },
    "skipLibCheck": true,
    "noErrorTruncation": true,
    "lib": ["ES2022"],
    "module": "ES2022",
  },
}
